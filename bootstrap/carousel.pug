extends partials/_layout
block main

   .container
      #testCarousel.carousel.slide.carousel-dark(data-bs-ride='carousel')
         .carousel-indicators
            button.active(type='button' data-bs-target='#testCarousel' data-bs-slide-to='0')
            button(type='button' data-bs-target='#testCarousel' data-bs-slide-to='1')
            button(type='button' data-bs-target='#testCarousel' data-bs-slide-to='2')

         .carousel-inner
            .carousel-item.active(data-bs-interval="5000")
               img.d-block.w-100(src='https://via.placeholder.com/980x350?text=Slide1' alt='...')
               .carousel-caption
                  h5 First slide label
                  p Some representative placeholder content for the first slide.
            .carousel-item(data-bs-interval="5000")
               img.d-block.w-100(src='https://via.placeholder.com/980x350?text=Slide2' alt='...')
               .carousel-caption
                  h5 Second slide label
                  p Some representative placeholder content for the first slide.

            .carousel-item(data-bs-interval="5000")
               img.d-block.w-100(src='https://via.placeholder.com/980x350?text=Slide3' alt='...')
               .carousel-caption
                  h5 Third slide label
                  p Some representative placeholder content for the first slide.

         button.carousel-control-prev(type='button' data-bs-target='#testCarousel' data-bs-slide='prev')
            span.carousel-control-prev-icon
         button.carousel-control-next(type='button' data-bs-target='#testCarousel' data-bs-slide='next')
            span.carousel-control-next-icon

