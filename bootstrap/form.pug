extends partials/_layout
block main

   .container
      form.w-50.m-auto
         .mb-3
            label.form-label(for='exampleFormControlInput1') Email address
            input#exampleFormControlInput1.form-control.is-valid(type='email' placeholder='name@example.com')
         .mb-3
            label.form-label(for='exampleFormControlTextarea1') Example textarea
            textarea#exampleFormControlTextarea1.form-control.is-invalid(rows='3')
         .mb-3
            label.form-label(for='formFile') Default file input example
            input#formFile.form-control(type='file')
         .mb-3
            select.form-select(aria-label='Default select example')
               option(selected='') Open this select menu
               option(value='1') One
               option(value='2') Two
               option(value='3') Three
         .mb-3
            .form-check
               input#flexCheckDefault.form-check-input(type='checkbox' value='')
               label.form-check-label(for='flexCheckDefault')
                  | Default checkbox

         .mb-3
            .form-check
               input#flexRadioDefault1.form-check-input(type='radio' name='flexRadioDefault')
               label.form-check-label(for='flexRadioDefault1')
                  | Default radio
            .form-check
               input#flexRadioDefault2.form-check-input(type='radio' name='flexRadioDefault' checked='')
               label.form-check-label(for='flexRadioDefault2')
                  | Default checked radio
         .mb-3
            .form-check.form-switch
               input#flexSwitchCheckDefault.form-check-input(type='checkbox' role='switch')
               label.form-check-label(for='flexSwitchCheckDefault') Default switch checkbox input
         .mb-3
            .form-floating.mb-3
               input#floatingInput.form-control(type='email' placeholder='name@example.com')
               label(for='floatingInput') Email address
            .form-floating
               input#floatingPassword.form-control(type='password' placeholder='Password')
               label(for='floatingPassword') Password







         button.btn.btn-success Register
